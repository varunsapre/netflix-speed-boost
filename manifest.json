{
  "manifest_version": 3,
  "name": "Netflix Speed Boost",
  "version": "1.1.4",
  "description": "Hold on the video to temporarily boost playback speed.",
  "author": "Varun Sapre",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.netflix.com/*",
    "https://play.hbomax.com/*"
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Netflix Speed Boost Settings",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "js": [
        "netflix-module.js",
        "main-loader.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": ["https://play.hbomax.com/*"],
      "js": [
        "hbomax-module.js",
        "main-loader.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}